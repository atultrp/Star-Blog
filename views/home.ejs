<%- include("partials/header"); -%>

    <main class="flex-shrink-0">
        <div class="container">
            <h1 class="mt-5">Home</h1>
            <p class="lead">
                <%= startingContent %>
            </p>
        </div>

        <% posts.forEach(function(post) { %>
            <h1 class="mt-5">
                <%= post.title %>
            </h1>
            <p class="lead">
                <%= post.content.substring(0, 100)%>...
                    <a href="/posts/<%=post.title %>">Read More</a>
            </p>
            <% }); %>
    </main>


    <%- include("partials/footer"); -%>